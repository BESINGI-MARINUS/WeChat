extends _base
block append head 
  link(rel="stylesheet", href="signup.css")
block content
  .signup-container
    .signup-header
      h2 Create Account
      p Join the conversation today!
    form.signup-form#signup-form
      .form-group
        label(for="name") Name
        input#name(type="text", name="name", required, placeholder="John Doe")
      .form-group
        label(for="email") Email
        input#email(type="email", name="email", required, placeholder="you@example.com")
      .form-group
        label(for="password") Password
        input#password(type="password", name="password", required, minlength="8", placeholder="At least 8 characters")
      .form-group
        label(for="confirm-password") Confirm Password
        input#confirm-password(type="password", name="passwordConfirm", required, placeholder="Repeat your password")
      button.btn-signup#btn-signup(type="submit") Sign Up
    p.login-link
      | Already have an account?
      a(href="/login") Log In
