doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Sign Up - LinkUp
    link(rel="stylesheet", href="signup.css")
  body
    .signup-container
      .signup-header
        h2 Create Account
        p Join the conversation today!
      form.signup-form(action="#", method="POST")
        .form-group
          label(for="name") Name
          input#name(type="text", name="name", required, placeholder="John Doe")
        .form-group
          label(for="email") Email
          input#email(type="email", name="email", required, placeholder="you@example.com")
        .form-group
          label(for="password") Password
          input#password(type="password", name="password", required, minlength="8", placeholder="At least 8 characters")
        .form-group
          label(for="confirm-password") Confirm Password
          input#confirm-password(type="password", name="confirm-password", required, placeholder="Repeat your password")
        button.btn-signup(type="submit") Sign Up
      p.login-link
        | Already have an account?
        a(href="/login") Log In
